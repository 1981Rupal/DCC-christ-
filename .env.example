# Environment Variables for Daily Coding Challenge

# Server Configuration
NODE_ENV=production
PORT=8080

# JWT Secret for authentication (will be auto-generated by Render)
JWT_SECRET=your_jwt_secret_key_here

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://your-render-app.onrender.com

# Database Configuration (if using external database in future)
# DATABASE_URL=your_database_url_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf

# Application Settings
DEFAULT_CHALLENGE_DURATION=24
AUTO_GRADE_SUBMISSIONS=true
